{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {
          "type": "grafana",
          "uid": "-- Grafana --"
        },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "panels": [
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "options": {
                "0": { "color": "red", "text": "DOWN" },
                "1": { "color": "green", "text": "UP" }
              },
              "type": "value"
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        }
      },
      "gridPos": { "h": 4, "w": 3, "x": 0, "y": 0 },
      "id": 1,
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center",
        "textMode": "value"
      },
      "targets": [{ "expr": "up{job=\"oathkeeper-metrics\"}", "refId": "A" }],
      "title": "Status",
      "type": "stat"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": { "defaults": { "unit": "short" } },
      "gridPos": { "h": 4, "w": 3, "x": 3, "y": 0 },
      "id": 2,
      "options": { "colorMode": "value", "graphMode": "area" },
      "targets": [
        { "expr": "go_goroutines{job=\"oathkeeper-metrics\"}", "refId": "A" }
      ],
      "title": "Goroutines",
      "type": "stat"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": { "defaults": { "unit": "bytes" } },
      "gridPos": { "h": 4, "w": 3, "x": 6, "y": 0 },
      "id": 3,
      "options": { "colorMode": "value", "graphMode": "area" },
      "targets": [
        {
          "expr": "process_resident_memory_bytes{job=\"oathkeeper-metrics\"}",
          "refId": "A"
        }
      ],
      "title": "Resident Memory",
      "type": "stat"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": { "defaults": { "unit": "reqps" } },
      "gridPos": { "h": 4, "w": 3, "x": 9, "y": 0 },
      "id": 4,
      "options": { "colorMode": "value", "graphMode": "area" },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"oathkeeper-metrics\"}[5m]))",
          "refId": "A"
        }
      ],
      "title": "Req/s",
      "type": "stat"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
      "id": 5,
      "options": {
        "legend": {
          "calcs": ["mean", "max"],
          "displayMode": "table",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"oathkeeper-metrics\"}[5m])) by (endpoint)",
          "legendFormat": "{{endpoint}}",
          "refId": "A"
        }
      ],
      "title": "Request Rate by Endpoint",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
      "id": 6,
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" }
      },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"oathkeeper-metrics\", code=~\"5..\"}[5m]))",
          "legendFormat": "5xx",
          "refId": "A"
        },
        {
          "expr": "sum(rate(http_requests_total{job=\"oathkeeper-metrics\", code=~\"4..\"}[5m]))",
          "legendFormat": "4xx",
          "refId": "B"
        }
      ],
      "title": "Error Rates",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": { "defaults": { "unit": "s" } },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
      "id": 7,
      "options": {
        "legend": {
          "calcs": ["mean", "max", "last"],
          "displayMode": "table",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(http_requests_duration_seconds_bucket{job=\"oathkeeper-metrics\"}[5m])) by (le))",
          "legendFormat": "p50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_requests_duration_seconds_bucket{job=\"oathkeeper-metrics\"}[5m])) by (le))",
          "legendFormat": "p95",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_requests_duration_seconds_bucket{job=\"oathkeeper-metrics\"}[5m])) by (le))",
          "legendFormat": "p99",
          "refId": "C"
        }
      ],
      "title": "Request Latency (p50, p95, p99)",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
      "id": 8,
      "options": {
        "legend": {
          "calcs": ["mean", "last"],
          "displayMode": "table",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "expr": "go_memstats_heap_inuse_bytes{job=\"oathkeeper-metrics\"}",
          "legendFormat": "Heap In Use",
          "refId": "A"
        },
        {
          "expr": "go_memstats_heap_alloc_bytes{job=\"oathkeeper-metrics\"}",
          "legendFormat": "Heap Allocated",
          "refId": "B"
        }
      ],
      "title": "Heap Memory",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 20 },
      "id": 9,
      "options": {
        "legend": {
          "calcs": ["mean", "max"],
          "displayMode": "table",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "expr": "go_gc_duration_seconds{job=\"oathkeeper-metrics\",quantile=\"0.95\"}",
          "legendFormat": "p95 GC Pause",
          "refId": "A"
        }
      ],
      "title": "GC Pause Duration (p95)",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 20 },
      "id": 10,
      "options": {
        "legend": {
          "calcs": ["last"],
          "displayMode": "table",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "expr": "process_open_fds{job=\"oathkeeper-metrics\"}",
          "legendFormat": "Open FDs",
          "refId": "A"
        }
      ],
      "title": "Open File Descriptors",
      "type": "timeseries"
    }
  ],
  "refresh": "10s",
  "schemaVersion": 38,
  "style": "dark",
  "tags": ["oathkeeper", "ory", "proxy"],
  "templating": {
    "list": [
      {
        "current": {
          "selected": true,
          "text": "Prometheus",
          "value": "Prometheus"
        },
        "hide": 0,
        "label": "Data Source",
        "name": "DS_PROMETHEUS",
        "options": [],
        "query": "prometheus",
        "refresh": 1,
        "type": "datasource"
      }
    ]
  },
  "time": { "from": "now-30m", "to": "now" },
  "timezone": "",
  "title": "Oathkeeper Monitoring Dashboard",
  "uid": "oathkeeper-monitoring",
  "version": 1
}
