      },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"dex\", handler=~\"/auth.*|/callback\", code!=\"\"}[5m])) by (code)",
          "legendFormat": "{{code}}",
          "refId": "A"
        }
      ],
      "title": "Auth Requests Rate (by HTTP status)",
      "type": "timeseries"
    },
