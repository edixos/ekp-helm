{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {
          "type": "grafana",
          "uid": "-- Grafana --"
        },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "panels": [
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "options": {
                "0": { "color": "red", "text": "DOWN" },
                "1": { "color": "green", "text": "UP" }
              },
              "type": "value"
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        }
      },
      "gridPos": { "h": 4, "w": 3, "x": 0, "y": 0 },
      "id": 1,
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center",
        "textMode": "value"
      },
      "targets": [{ "expr": "up{job=\"hydra-hydra-admin\"}", "refId": "A" }],
      "title": "Status",
      "type": "stat"
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": { "defaults": { "unit": "short" } },
      "gridPos": { "h": 4, "w": 3, "x": 3, "y": 0 },
      "id": 2,
      "options": { "colorMode": "value", "graphMode": "area" },
      "targets": [
        { "expr": "go_goroutines{job=\"hydra-hydra-admin\"}", "refId": "A" }
      ],
      "title": "Goroutines",
      "type": "stat"
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": { "defaults": { "unit": "bytes" } },
      "gridPos": { "h": 4, "w": 3, "x": 6, "y": 0 },
      "id": 3,
      "options": { "colorMode": "value", "graphMode": "area" },
      "targets": [
        {
          "expr": "process_resident_memory_bytes{job=\"hydra-hydra-admin\"}",
          "refId": "A"
        }
      ],
      "title": "Memory",
      "type": "stat"
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": { "defaults": { "unit": "reqps" } },
      "gridPos": { "h": 4, "w": 3, "x": 9, "y": 0 },
      "id": 4,
      "options": { "colorMode": "value", "graphMode": "area" },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"hydra-hydra-admin\"}[5m]))",
          "refId": "A"
        }
      ],
      "title": "Req/s",
      "type": "stat"
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": { "defaults": { "unit": "reqps" } },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
      "id": 5,
      "options": {
        "legend": {
          "calcs": ["mean", "max"],
          "displayMode": "table",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"hydra-hydra-admin\"}[5m])) by (endpoint, method)",
          "legendFormat": "{{method}} {{endpoint}}",
          "refId": "A"
        }
      ],
      "title": "Request Rate by Endpoint",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": { "stacking": { "mode": "normal" } }
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
      "id": 6,
      "options": { "legend": { "displayMode": "list", "placement": "bottom" } },
      "targets": [
        {
          "expr": "sum(rate(http_requests_statuses_total{job=\"hydra-hydra-admin\"}[5m])) by (status_bucket)",
          "legendFormat": "{{status_bucket}}",
          "refId": "A"
        }
      ],
      "title": "Response Status Codes",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": { "defaults": { "unit": "s" } },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
      "id": 7,
      "options": {
        "legend": {
          "calcs": ["mean", "max", "last"],
          "displayMode": "table",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_requests_duration_seconds_bucket{job=\"hydra-hydra-admin\"}[5m])) by (le, endpoint))",
          "legendFormat": "p95 - {{endpoint}}",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.50, sum(rate(http_requests_duration_seconds_bucket{job=\"hydra-hydra-admin\"}[5m])) by (le, endpoint))",
          "legendFormat": "p50 - {{endpoint}}",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_requests_duration_seconds_bucket{job=\"hydra-hydra-admin\"}[5m])) by (le, endpoint))",
          "legendFormat": "p99 - {{endpoint}}",
          "refId": "C"
        }
      ],
      "title": "Request Latency (p50, p95, p99)",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": { "defaults": { "unit": "binBps" } },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
      "id": 8,
      "options": {
        "legend": {
          "calcs": ["mean"],
          "displayMode": "table",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "expr": "rate(http_requests_size_bytes_sum{job=\"hydra-hydra-admin\"}[5m]) / rate(http_requests_size_bytes_count{job=\"hydra-hydra-admin\"}[5m])",
          "legendFormat": "Avg Request Size",
          "refId": "A"
        },
        {
          "expr": "rate(http_response_size_bytes_sum{job=\"hydra-hydra-admin\"}[5m]) / rate(http_response_size_bytes_count{job=\"hydra-hydra-admin\"}[5m])",
          "legendFormat": "Avg Response Size",
          "refId": "B"
        }
      ],
      "title": "Request/Response Size",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": { "defaults": { "unit": "bytes" } },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 20 },
      "id": 9,
      "options": {
        "legend": {
          "calcs": ["mean", "last"],
          "displayMode": "table",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "expr": "go_memstats_heap_alloc_bytes{job=\"hydra-hydra-admin\"}",
          "legendFormat": "Heap Allocated",
          "refId": "A"
        },
        {
          "expr": "go_memstats_heap_inuse_bytes{job=\"hydra-hydra-admin\"}",
          "legendFormat": "Heap In Use",
          "refId": "B"
        },
        {
          "expr": "go_memstats_heap_idle_bytes{job=\"hydra-hydra-admin\"}",
          "legendFormat": "Heap Idle",
          "refId": "C"
        },
        {
          "expr": "go_memstats_stack_inuse_bytes{job=\"hydra-hydra-admin\"}",
          "legendFormat": "Stack In Use",
          "refId": "D"
        }
      ],
      "title": "Memory Breakdown",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": { "defaults": { "unit": "short" } },
      "gridPos": { "h": 8, "w": 6, "x": 12, "y": 20 },
      "id": 10,
      "options": {
        "legend": {
          "calcs": ["mean", "last"],
          "displayMode": "table",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "expr": "go_goroutines{job=\"hydra-hydra-admin\"}",
          "legendFormat": "Goroutines",
          "refId": "A"
        },
        {
          "expr": "go_threads{job=\"hydra-hydra-admin\"}",
          "legendFormat": "OS Threads",
          "refId": "B"
        }
      ],
      "title": "Goroutines & Threads",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": { "defaults": { "unit": "s" } },
      "gridPos": { "h": 8, "w": 6, "x": 18, "y": 20 },
      "id": 11,
      "options": {
        "legend": {
          "calcs": ["mean", "max"],
          "displayMode": "table",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "expr": "go_gc_duration_seconds{job=\"hydra-hydra-admin\", quantile=\"0.5\"}",
          "legendFormat": "p50",
          "refId": "A"
        },
        {
          "expr": "go_gc_duration_seconds{job=\"hydra-hydra-admin\", quantile=\"0.75\"}",
          "legendFormat": "p75",
          "refId": "B"
        },
        {
          "expr": "go_gc_duration_seconds{job=\"hydra-hydra-admin\", quantile=\"1\"}",
          "legendFormat": "Max",
          "refId": "C"
        }
      ],
      "title": "GC Duration",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": { "defaults": { "unit": "ops" } },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 28 },
      "id": 12,
      "options": {
        "legend": {
          "calcs": ["mean"],
          "displayMode": "table",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "expr": "rate(go_memstats_alloc_bytes_total{job=\"hydra-hydra-admin\"}[5m])",
          "legendFormat": "Allocations Rate",
          "refId": "A"
        },
        {
          "expr": "rate(go_memstats_mallocs_total{job=\"hydra-hydra-admin\"}[5m])",
          "legendFormat": "Mallocs/s",
          "refId": "B"
        },
        {
          "expr": "rate(go_memstats_frees_total{job=\"hydra-hydra-admin\"}[5m])",
          "legendFormat": "Frees/s",
          "refId": "C"
        }
      ],
      "title": "Memory Allocations",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 28 },
      "id": 13,
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom" }
      },
      "targets": [
        {
          "expr": "process_open_fds{job=\"hydra-hydra-admin\"}",
          "legendFormat": "Open FDs",
          "refId": "A"
        },
        {
          "expr": "process_max_fds{job=\"hydra-hydra-admin\"}",
          "legendFormat": "Max FDs",
          "refId": "B"
        }
      ],
      "title": "File Descriptors",
      "type": "timeseries"
    }
  ],
  "refresh": "10s",
  "schemaVersion": 38,
  "tags": ["hydra", "ory", "oauth2"],
  "templating": { "list": [] },
  "time": { "from": "now-1h", "to": "now" },
  "timezone": "",
  "title": "Hydra Monitoring Dashboard",
  "uid": "hydra-monitoring",
  "version": 0
}
